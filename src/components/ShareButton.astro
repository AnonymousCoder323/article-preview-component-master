---
import ShareIcon from './icons/ShareIcon.astro';

interface Props {
  class?: string;
  id?: string;
}

const { class: className, id } = Astro.props;
---

<button
  id={id}
  class=`grid h-8 w-8 place-content-center rounded-full ${className} hover:cursor-pointer`
  aria-label='Share'><ShareIcon /></button
>
